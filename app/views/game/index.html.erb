<h1>Video Game Sales as of December 2016</h1>
<table>
    <thead>
        <tr>
            <th>Ranks</th>
            <th>Name</th>
            <th>US Sales</th>
            <th>Japanese Sales</th>
            <th>Global Sales</th>
        </tr>
    </thead>
    <tbody>
        <% @games.each do |game| %>
        <tr>
            <td><%= game.id %></td>
            <td><%= link_to game.game_name, game %></td>
            <td><%= game.us_sales %></td>
            <td><%= game.jp_sales %></td>
            <td><%= game.global_sales %></td>
        </tr>
    </tbody>
    <% end %>
</table>

<%= paginate @games, window: 2 %>




